<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shelfshare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShelfShare"
        tools:replace="android:allowBackup"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_GOOGLE_MAPS_API_KEY" />

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.ShelfShare.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".UserProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".AvailableBooksActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".BookDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".FavoritesActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".PaymentActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".AddBookActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".MyBooksActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".CartActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".RentalActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name=".LocationSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.ShelfShare.NoActionBar" />

        <activity
            android:name="com.razorpay.CheckoutActivity"
            android:exported="false"
            android:theme="@style/CheckoutTheme"
            tools:replace="android:exported" />

    </application>

</manifest>
